        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-prettier": "^5.2.3",
        "eslint-plugin-promise": "^6.6.0",
        "eslint-plugin-react": "^7.37.3",
        "eslint-plugin-storybook": "^0.11.2",
        "eslint-plugin-stylelint": "^0.1.1",
