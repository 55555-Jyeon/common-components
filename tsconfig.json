{
    "compilerOptions": {
        /* Basic Options */
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        /* Advanced Options */
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "typeRoots": ["./node_modules/@types"],
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./src/**/*.d.ts",
        ".storybook/**/*",
        "craco.config.ts",
        ".eslintrc.js",
        "global.d.ts"
    ]
}
